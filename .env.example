# Docker Compose Environment Variables
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=production

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme-secure-password
MONGODB_DATABASE_NAME=cherryPark
MONGODB_RESIDENTS_COLLECTION=cherryParkResidents
MONGODB_FLOORPLAN_COLLECTION=cherryParkFloorPlans
MONGODB_EMPLOYEE_COLLECTION=cherryParkEmployees
MONGODB_MAINTENANCE_COLLECTION=maintenanceRequests

# Backend Configuration
PORT=9443
JWT_SECRET=your-super-secure-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:4000,http://localhost:4200
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
API_URL=http://localhost:9443
