# Server Configuration
NODE_ENV=development
PORT=9443

# Database Configuration
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=yourCluster
MONGODB_DATABASE_NAME=cherryPark
MONGODB_RESIDENTS_COLLECTION=cherryParkResidents
MONGODB_FLOORPLAN_COLLECTION=cherryParkFloorPlans
MONGODB_EMPLOYEE_COLLECTION=cherryParkEmployees
MONGODB_MAINTENANCE_COLLECTION=maintenanceRequests

# Security
JWT_SECRET=your-super-secure-secret-key-min-32-characters
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:9443

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=./certs/server.cert
SSL_KEY_PATH=./certs/server.key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
